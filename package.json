{
  "name": "famtask",
  "version": "1.0.0",
  "description": "FamTask is a modern and collaborative web app designed for families to manage daily house tasks and shared shopping lists in one place. It simplifies communication, increases responsibility, and provides a smooth experience for users of all ages.",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix server\" \"npm run dev --prefix client\"",
    "dev:client": "npm run dev",
    "dev:server": "npm run dev",
    "build": "npm run build --workspaces",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ialirezaesrafili/FamTask.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ialirezaesrafili/FamTask/issues"
  },
  "homepage": "https://github.com/ialirezaesrafili/FamTask#readme",
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "react-toastify": "^11.0.5",
    "styled-components": "^6.1.19"
  }
}
